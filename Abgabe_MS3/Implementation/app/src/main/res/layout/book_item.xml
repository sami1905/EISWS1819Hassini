<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_dateOfDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/colorPrimary"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart_book"
            android:layout_width="match_parent"
            android:layout_height="170dp"

            android:background="@android:color/white"
            ></com.github.mikephil.charting.charts.LineChart>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:text="  Anzahl Blutzuckerwert"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:id="@+id/text_view_nValues_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/valueColor"
            android:gravity="right"
            android:layout_marginRight="80dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:text="  Durchschnittlicher Blutzuckerwert"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:id="@+id/text_view_averageValue_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/valueColor"
            android:gravity="right"
            android:layout_marginRight="80dp"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:text="  Zeit im Zielbereich"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:id="@+id/text_view_timeInRange_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/valueColor"
            android:gravity="right"
            android:layout_marginRight="80dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:text="  Ereignisse des Tages"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:id="@+id/text_view_events_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/valueColor"
            android:gravity="right"
            android:layout_marginRight="80dp"
            />


    </LinearLayout>



</android.support.v7.widget.CardView>