<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".AddEventActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:text="\nEreignis hinzufÃ¼gen\n"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="@color/gray2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="80dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:text="Datum: "
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edit_text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:hint="YYYY-MM-DD"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:text="Uhrzeit: "
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edit_text_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:hint="HH:MM"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:text="Blutzuckerwert: "
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edit_text_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:hint='0'
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:text="Kohlenhydrate: "
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edit_text_carbohydrates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:hint="0"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:text="BE: "
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edit_text_be"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:hint="0"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:text="Korrektureinheiten: "
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edit_text_correction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:hint="0"
            android:inputType="number"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:text="Mahlzeit: "
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edit_text_meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:hint="-"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:text="Insulineinheiten: "
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edit_text_insulin_units"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:hint="0"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:text="Insulinart: "
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edit_text_insulin_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:hint="-"
            android:inputType="text"/>


    </LinearLayout>


    <Button
        android:id="@+id/back_button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="40dp"
        android:gravity="bottom"
        android:text="Abbrechen"
        android:textSize="10dp" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="40dp"
        android:gravity="bottom"
        android:text="Speichern"
        android:textSize="10dp"/>




</RelativeLayout>